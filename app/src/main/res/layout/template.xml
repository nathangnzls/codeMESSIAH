<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="15dp">
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/red"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_margin="8dp"
        android:id="@+id/helpme"
        android:text="Help me!"/>
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/red"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:id="@+id/trapped"
        android:layout_margin="8dp"
        android:text="Im trapped!"/>
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/red"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:id="@+id/stranded"
        android:layout_margin="8dp"
        android:text="Im stranded!"/>
    <Button
        android:id="@+id/fire"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/red"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_margin="8dp"
        android:text="Help me! My house in on fire"/>
    <Button
        android:id="@+id/_911"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/red"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_margin="8dp"
        android:text="Call 911!"/>
    <Button
        android:id="@+id/_8888"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/red"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_margin="8dp"
        android:text="Call 8888!"/>
</LinearLayout>